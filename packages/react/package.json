{
  "name": "@taskwave/react",
  "version": "2.0.0",
  "description": "React bindings for taskwave",
  "keywords": [
    "scheduler",
    "task-scheduler",
    "interval",
    "timeout",
    "timing",
    "react",
    "hooks",
    "typescript"
  ],
  "author": "erfanezk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erfanezk/taskwave.git",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/erfanezk/taskwave#readme",
  "bugs": {
    "url": "https://github.com/erfanezk/taskwave/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && pnpm check-dist",
    "check-dist": "node scripts/check-dist.js",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "publish:npm": "pnpm publish --access public",
    "tag": "node scripts/create-tag.js",
    "tag:patch": "pnpm version patch && pnpm tag",
    "tag:minor": "pnpm version minor && pnpm tag",
    "tag:major": "pnpm version major && pnpm tag",
    "release": "node scripts/create-tag.js --push",
    "release:patch": "pnpm version patch && pnpm release",
    "release:minor": "pnpm version minor && pnpm release",
    "release:major": "pnpm version major && pnpm release"
  },
  "dependencies": {
    "@taskwave/core": "^2.0.4",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "jsdom": "^27.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^4.0.6"
  }
}
