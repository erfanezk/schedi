{
  "name": "@schedi/core",
  "version": "1.0.0",
  "description": "Core scheduling functionality for JavaScript and TypeScript applications",
  "keywords": [
    "scheduler",
    "task-scheduler",
    "interval",
    "timeout",
    "cron",
    "timing",
    "typescript"
  ],
  "author": "erfanezk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erfanezk/schedi.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/erfanezk/schedi#readme",
  "bugs": {
    "url": "https://github.com/erfanezk/schedi/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --project tsconfig.build.json",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^4.0.6"
  }
}
