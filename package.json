  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@cspell/eslint-plugin": "^9.2.2",
    "@vitest/eslint-plugin": "^1.3.25",
    "prettier": "^3.6.2"
  }
}
